<div class="commit_entry">
  
  <div class="image">
    <%= image_tag avatar(commit.patch.author_email) %>
  </div>
  
  <div class="content">
    
    <span class="message">
      <span class="name"><%= "#{commit.patch.author_name}" %> added patch to <%= link_to "#{commit.branch.repository}/#{commit.branch.name}", repository_branch_patches_url(commit.branch.repository, commit.branch.name)%></span><br/><br/>
      <%= refer_to commit.patch %><br/>
      <%= change_endlines(description(commit.patch)) %>
    </span>
    <div class="clear"></div>
      
    <span class="date">
      <%= commit.patch.date.strftime("%Y-%m-%d, %H:%M:%S") %>
    </span>
  </div>
  
<div class="clear"></div>
</div>